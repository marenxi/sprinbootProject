<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itszt.manager.dao.MemberDao" >
    <!-- 根据时间段和任意会员的字段进行查询-->
    <select id="findByManyConditions" resultType="com.itszt.manager.entity.Member">
     SELECT id,name ,age,work_type workType,telephone,regist_time,status
      FROM myssproject.member_manage
     <where>
         <if test="startDate!=null and startDate!='' ">
             <![CDATA[ and regist_time>= #{startDate}  ]]>
         </if>
         <if test="endDate!=null and endDate!='' "  >
             <![CDATA[ and regist_time<= #{endDate}  ]]>
         </if>

         <if test="name!=null and name!=''"  >
              and name like concat("%",#{name},"%")
         </if>
         <if test="age!=null and name!=''"  >
              and age like concat("%",#{age},"%")
         </if>
         <if test="telephone!=null and telephone!=''"  >
              and telephone like concat("%",#{telephone},"%")
         </if>
         <if test="workType!=null and workType!=''"  >
              and work_type like concat("%",#{workType},"%")
         </if>
     </where>
        limit #{pageStart},#{pageEnd}
    </select>
    <select id="countManyConditions" resultType="integer">
        SELECT count(1)
        FROM myssproject.member_manage
        <where>
            <if test="startDate!=null and startDate!='' ">
                <![CDATA[ and regist_time>= #{startDate}  ]]>
            </if>
            <if test="endDate!=null and endDate!='' "  >
                <![CDATA[ and regist_time<= #{endDate}  ]]>
            </if>

            <if test="name!=null and name!=''"  >
                and name like concat("%",#{name},"%")
            </if>
            <if test="age!=null and name!=''"  >
                and age like concat("%",#{age},"%")
            </if>
            <if test="telephone!=null and telephone!=''"  >
                and telephone like concat("%",#{telephone},"%")
            </if>
            <if test="workType!=null and workType!=''"  >
                and work_type like concat("%",#{workType},"%")
            </if>
        </where>
    </select>

    <!--根据id查询会员信息-->
    <select id="findById" resultType="com.itszt.manager.entity.Member">
        SELECT id,name ,age,work_type workType,telephone,regist_time registTime,status
        FROM myssproject.member_manage
        WHERE id=#{id}

    </select>

    <!--查询所有的会员信息-->
    <select id="findAll" resultType="com.itszt.manager.entity.Member">
        SELECT id,name ,age,work_type workType,telephone,regist_time registTime,status
        FROM myssproject.member_manage

    </select>


    <!--根据id删除会员信息-->
    <delete id="deleteMemberById" parameterType="int">
        DELETE from myssproject.member_manage
        where id=#{id}
    </delete>

    <!--新增会员信息-->
    <insert id="insertMember" parameterType="com.itszt.manager.entity.Member">
        INSERT into myssproject.member_manage(name,age,work_type,telephone,regist_time,status)
        VALUES(#{name},#{age},#{workType},#{telephone},#{registTime},#{status})

    </insert>

    <!--会员信息的更新-->
    <update id="updateMemberById" parameterType="com.itszt.manager.entity.Member">
        UPDATE myssproject.member_manage
        SET name=#{name},age=#{age},work_type=#{workType},telephone=#{telephone},regist_time=#{registTime},status=#{status}
        WHERE id=#{id}
    </update>

    <!--根据id查询会员信息-->
    <select id="findMemberById" resultType="com.itszt.manager.entity.Member">
        SELECT id,name ,age,work_type workType,telephone,regist_time registTime,status
        FROM myssproject.member_manage
        WHERE id=#{id}

    </select>
</mapper>